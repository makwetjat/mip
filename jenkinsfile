pipeline {
  
    agent any
    
    stages {
    
        stage("build") {
        
            steps {
                echo "`date`|Building the application"
            }
        }
        
        stage("test") {
	        
	    steps {
	        echo "`date`|Testing the application"
	   }
        }
        
        stage("deploy") {
        
            steps {
                echo "`date`| deploying the application"
            }
        }        
    }
}
